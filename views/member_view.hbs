<script>
    $(document).ready(function(){
            //showing data to edit modal      $('#mytable').on('click','.edit',function(){
        var member_id = $(this).data('id');
        var member_username = $(this).data('member_username');
        var member_password = $(this).data('member_password');
        var member_email = $(this).data('member_email');
        $('#EditModal').modal('show');
        $('.member_username').val(member_username);
        $('.member_password').val(member_password);
        $('.member_email').val(member_email);
        $('.member_id').val(member_id);
    });
